<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HelpFaq">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Help / FAQ"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </LinearLayout>

            <!-- General Questions Title -->
            <TextView
                android:layout_marginTop="24dp"
                android:text="游릭  General Questions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Question Items (Clickable and green) -->
            <TextView
                android:id="@+id/faq1"
                android:text="游릭 What does this app do?"
                android:textSize="15sp"
                android:textColor="#00C853"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/faq2"
                android:text="游릭 How to add a product?"
                android:textSize="15sp"
                android:textColor="#00C853"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/faq3"
                android:text="游릭 How is stock predicted?"
                android:textSize="15sp"
                android:textColor="#00C853"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Account & Security -->
            <TextView
                android:layout_marginTop="24dp"
                android:text="Account &amp; Security"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Box Section -->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/changePassword"
                    android:text="游릭 Change password"
                    android:textSize="15sp"
                    android:textColor="#00C853"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <TextView
                    android:id="@+id/privacySettings"
                    android:text="游릭 Privacy settings"
                    android:textSize="15sp"
                    android:textColor="#00C853"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <TextView
                    android:id="@+id/accountDeletion"
                    android:text="游릭 Account deletion"
                    android:textSize="15sp"
                    android:textColor="#00C853"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Contact Support Button -->
            <Button
                android:layout_marginTop="24dp"
                android:text="Contact Support"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00C853"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Version Info -->
            <TextView
                android:layout_marginTop="16dp"
                android:text="App version: 1.0.0"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
