<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#4CAF50" />

    <!-- Main Card -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_card"
            android:elevation="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ What does this app do?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B5E20" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nGrocery Manager is your intelligent assistant for managing groceries. It helps you effortlessly add, track, and organize your grocery items."
                android:textSize="16sp"
                android:textColor="#444444" />

            <!-- Features -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nðŸ”¹ AI-powered stock prediction based on weekly sales\nðŸ”¹ Expiry alerts to prevent waste\nðŸ”¹ Smart restocking suggestions\nðŸ”¹ Clear stock overview for better planning"
                android:textSize="16sp"
                android:textColor="#444444" />

            <!-- Conclusion -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nStay stocked, reduce waste, and manage your kitchen like a pro!"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="#2E7D32" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
