<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MyProducts">

    <!-- âœ… Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Back Button (Left) -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/back" />

        <!-- Title (Centered) -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="My Products"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Refresh Button (Right) -->
        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/refresh" />

    </RelativeLayout>

    <!-- ðŸ” Search Bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search products..."
        android:iconifiedByDefault="false"
        android:layout_margin="8dp"
        android:background="@drawable/search_background" />

    <!-- Summary Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:weightSum="3">

        <!-- Total Products -->
        <LinearLayout
            android:id="@+id/totalProductsCard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/totalProductsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total\nProducts"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="6dp" />
        </LinearLayout>

        <!-- Expired Products -->
        <LinearLayout
            android:id="@+id/expiredProductsCard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/expiredText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expired"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="6dp" />
        </LinearLayout>

        <!-- Expiring Soon -->
        <LinearLayout
            android:id="@+id/expiringSoonCard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/expiringSoonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiring\nSoon"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Product List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/item_product" />

</LinearLayout>
